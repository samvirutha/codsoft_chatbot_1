# CHATBOT
def chatbot():
    print("ğŸ¤– Chatbot: Hi! I'm ChatBot. Type 'bye' to exit.")

    while True:
        user_input = input("You: ").lower()

        if "hello" in user_input or "hi" in user_input:
            print("ğŸ¤– Chatbot: Hello! How can I assist you today?")
        elif "how are you" in user_input:
            print("ğŸ¤– Chatbot: I'm just a program, but I'm doing great! How about you?")
        elif "your name" in user_input:
            print("ğŸ¤– Chatbot: I'm a rule-based chatbot created to help you.")
        elif "help" in user_input:
            print("ğŸ¤– Chatbot: Sure! I can answer your questions about weather, time, or just chat.")
        elif "time" in user_input:
           from datetime import datetime
           import pytz

           # Set timezone to India
           india_timezone = pytz.timezone('Asia/Kolkata')

            # Get current time in India
           india_time = datetime.now(india_timezone)
           print("Current Time in India:", india_time.strftime("%H:%M:%S"))
        elif "weather" in user_input:
            print("ğŸŒ¤ï¸ Chatbot: I'm not connected to the internet, but it's always sunny in my world!")
        elif "tell me a joke" in user_input:
            print("ğŸ¤– ChatBot: Why did the computer go to therapy? Because it had too many bytes of issues!")
        elif user_input == "what is ai":
            print("ğŸ¤– ChatBot: AI stands for Artificial Intelligence. It's about making machines smart!")
